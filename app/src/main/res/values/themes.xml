<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TribataTimer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime_500</item>
        <item name="colorSecondaryVariant">@color/lime_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_grey_700</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TribataTimer.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="OverFlow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>

    <style name="Theme.TribataTimer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TribataTimer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>